/* Top Navbar style */
.navbar.navbar-inverse {
	.navbar-inner {
		background: linear-gradient(lighten(pollapp_blue, 5%), pollapp_blue);
	}
	
	.brand {
		color: white;
	}
	
	.nav-collapse .nav li {
		a {
			color: pollapp_light_blue;
			
			&:hover {
				color: white;
				background-color: transparent;
			}	
		}
		
		&.active {
			a {
				background-color: darken(pollapp_blue, 5%);
				
				&:hover {
					background-color: darken(pollapp_blue, 5%);
				}
			}
		}
	}
	
	.btn-navbar {
		background: linear-gradient(darken(pollapp_blue, 5%), darken(pollapp_blue, 15%));
	}
}

@media (min-width: 980px) {
	.navbar.navbar-inverse {
		.brand {
			padding-top: 20px;
			padding-bottom: 20px;
		}
		
		.nav-collapse .nav > li > a {
			padding-top: 20px;
			padding-bottom: 20px;
		}
	}
}

