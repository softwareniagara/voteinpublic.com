/* Color & style constants */
pollapp_black = #262626;
pollapp_red = #964B46;
pollapp_green = #4B9646;
pollapp_blue = #224E98;
pollapp_light_blue = #BDCAE0;

body {
  background: white;
  padding: 80px 25px 20px 25px;
}

@media (max-width: 979px) {
  body {
    padding-top: 0;
    padding-left: 0;
    padding-right: 0;
  }
}

@media (max-width: 767px) {
  body {
    padding-right: 20px;
    padding-left: 20px;
  }
}

a {
  color: #00B7FF
}

.btn.btn-primary {
  background: linear-gradient(lighten(pollapp_black, 15%), pollapp_black);
}

/* Top Navbar style */
.navbar.navbar-inverse {
  margin-bottom: 0;

	.navbar-inner {
    border-radius(0);
		background: linear-gradient(lighten(pollapp_blue, 5%), pollapp_blue);
	}
	
	.brand {
		color: white;
		text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5);
	}
	
	.nav-collapse .nav li {		
		a {
			color: pollapp_light_blue;
			text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.45);
			
			&:hover {
				color: white;
				background-color: transparent;
			}	
		}
		
		&.active {
			a {
				background-color: darken(pollapp_blue, 5%);
				
				&:hover {
					background-color: darken(pollapp_blue, 5%);
				}
			}
		}
	}
	
	.btn-navbar {
		background: linear-gradient(darken(pollapp_blue, 5%), darken(pollapp_blue, 15%));
	}
}

/*
 * Stacked nav bar style
 */
.nav.nav-tabs.nav-stacked {
  [class*='span'] {
    min-height: 0;
  }
}

@media (min-width: 980px) {
	.navbar.navbar-inverse {
		.brand {
			padding-top: 20px;
			padding-bottom: 20px;
		}
		
		.nav-collapse .nav > li > a {
			padding-top: 20px;
			padding-bottom: 20px;
		}
	}
}

/* Alerts */
.alert {
  border-radius(0);
  margin-bottom: 0;

  .span12 {
    min-height: 20px;
  }
}

/* The Big Question */
article.question {
  padding: 90px 0;

  header {
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Crete Round', serif;
      font-size: 5em;
      text-align: center;
      text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
      margin-bottom: 30px;
    }
  }

  form {
    input, button {
      font-size: 2em;
      line-height: 1em;
    }

    input {
      height: auto;
      padding: .5em;
    }

    button {
      width: 100%;
      padding: .5em 0;
      vertical-align: top;
      height: auto;
    }
  }
}

@media(max-width: 767px) {
  article.question {
    margin: 0 -20px;
    padding: 20px;

    header {
      h1, h2, h3, h4, h5, h6 {
        font-size: 3em;
      }
    }
  }
}

/* Map */
#map {
  height: 500px;
  
  img {
    max-width: none;
  }
}

/* Google Map */
body.glayout {
  article.result {
    #map {
      position: absolute;
      top: 60px;
      left: 0;
      right: 0;
      bottom: 0;
      height: auto;
      width: auto;
    }
    
    footer {
      position: absolute;
      left: 0;
      right: 0;
      bottom: 0;
      height: auto;
      width: auto;
      background: rgba(0, 0, 0, 0.85);
      padding: 20px 15px;
      
      h1 {
        font-size: 18px;
        color: white;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5);
        margin: 0 0;
      }
      
      li {
        color: white;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5);
        text-align: right;
      }
    }
  }
}

#status-bar {
  margin-top: -60px;
  margin-bottom: 10px;
  background-color: #e8e8e8;
  background: rgba(232, 232, 232, 0.8);
  height: 40px;
  display: none;
  text-align: center;
}
