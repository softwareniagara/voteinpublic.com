pollapp_red = #c92235
pollapp_green = #a1cf32

body {
  background-color: #ffffff;
  padding-top: 20px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
}

a
  color: #00B7FF

/* Custom container */
.container-narrow
  margin: 0 auto
  max-width: 700px

/* Ask a question styles */
.ask-question
  text-align: center

h1
  font-size: 72px
  line-height: 1

#map
	height:500px

ul.answer_graph
  margin: 0
  padding: 0
  position: relative
  

ul.answer_graph li
  margin: 0
  padding: 0
  list-style-type: none
  position: absolute
  
ul.answer_graph li h2
  padding: .5em
  
ul.answer_graph li.yes
  left: 0
  
ul.answer_graph li.no
  right: 0
  text-align:right
  
li.no h2
  background: pollapp_red
  color: white

li.yes h2
  background: pollapp_green
  

