#!/usr/bin/env node

var mongoose = require('mongoose')
  , Question  = require('./../models/question.js')
  , Answer    = require('./../models/answer.js');

// Build your questions and answers
var data = {
      question: 'Is it a trap?'
    , answers: [
        {value: 'yes', coordinates: [43.168515, -79.254748]},
	{value: 'yes', coordinates: [43.168435, -79.254692]},
	{value: 'no', coordinates: [43.168594, -79.254804]},
	{value: 'no', coordinates: [43.155235, -79.245704]},
	{value: 'yes', coordinates: [43.052581, -79.058984]}
    ] 
  };

//Start the process
mongoose.connect('mongodb://localhost/pollapp');

var expectedAnswers = data.answers.length;
var numAnswers = 0;

var question = new Question({
  value: data.question,
  numAnswers: expectedAnswers
}); 

question.save(function(err, question) {
  if (err) {
    console.log(err);
    process.exit();
  }
  var responses = data.answers;
  for (a in responses) {
    var answer = new Answer({
      question_id: question.id,
      value: responses[a].value,
      coordinates: responses[a].coordinates
    }); 

    answer.save(function(err) {
	numAnswers += 1;
	
	if (numAnswers == expectedAnswers) {
	  console.log('Saved a great question. Got some good answers.');
	  process.exit();
	}
    });
  }
});